.moreinfo
    height: moreinfo-height
    width: menu-width
    overflow: hidden
    padding: 2.3vw
    display: flex       
    flex-direction: column
    margin: auto 0 0 0

    p, a
        font-size: moreinfo-font-size
        margin-bottom: 0
        margin-top: auto
        font-family: sans-serif

    p.title
        font-weight: bold
    p.body
        margin-bottom: 2vw

    a
        color: moreinfo-link-color
        font-weight: bold
        padding-left: 2.5vw
    a:before
        content:''
        background-repeat: no-repeat
        background-position: center
        background-size: contain
        position: absolute
        left: 2.5vw
        height: moreinfo-font-size
        width: moreinfo-font-size
    a.mail:before
        background-image: url('../images/svg/letter.svg')           
    a.home:before
        background-image: url('../images/svg/home.svg')           
    a.dribbble:before
        background-image: url('../images/svg/dribbble.svg')           
    a.twitter:before
        background-image: url('../images/svg/twitter.svg')           
        background-size: 1.5vw
        width: 1.7vw
    a.linkedin:before
        background-image: url('../images/svg/linkedin-inverted.svg')
        background-size: 1.7vw
        width: 1.7vw
