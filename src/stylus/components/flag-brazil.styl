.flag
    width: "calc(%s - 1vw)" % (profile-flag-image-size)
    height: "calc(%s - 1vw)" % (profile-flag-image-size)
    border-radius:50%
    overflow: hidden;
    border: 0.5vw solid menu-active-background-color
    svg
        display: block
        position: relative
        top: -0.16vw
        left: -0.15vw
        height: "calc(%s - 0.7vw)" % profile-flag-image-size
        width: "calc(%s - 0.7vw)" % profile-flag-image-size
        background-color: flag-brazil-color-yellow 
        path
            fill: flag-brazil-color-blue
        path:first-child
            fill: flag-brazil-color-green

@media screen and (max-width: tablet-width)
    .flag
        width: "calc(%s - 1vw)" % (profile-flag-image-size-tablet)
        height: "calc(%s - 1vw)" % (profile-flag-image-size-tablet)
        svg
            height: "calc(%s - 0.7vw)" % profile-flag-image-size-tablet
            width: "calc(%s - 0.7vw)" % profile-flag-image-size-tablet
        
