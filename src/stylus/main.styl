/* Importing configuration */
@import './config.styl'

html, body
    margin: 0
    min-height: 100vh
    max-width: 100vw
    padding: 0
    overflow-x: hidden
    width: 100vw

body
    display: flex
    flex-direction: row
    .menu
        background-color: menu-background-color
        max-width: menu-width
        width: menu-width
    .content
        background-color: white
        flex-grow: 1

@import './menu.styl'
@import './content.styl'
