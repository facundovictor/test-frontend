/* Importing configuration */
@import './config.styl'
@import './components/radialprogress.styl'
*
    user-select: none

html, body
    margin: 0
    min-height: 100vh
    max-width: 100vw
    padding: 0
    overflow-x: hidden
    width: 100vw

body
    display: flex
    flex-direction: row
    @import './menu.styl'
    @import './content.styl'


@viewport{
    zoom: 1.0;
    width: extend-to-zoom;
}
@-ms-viewport{
    width: extend-to-zoom;
    zoom: 1.0;
}
